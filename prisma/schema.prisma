generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:root@localhost:5432/casher-backend?schema=public"
}

model User {
  id            Int             @id @default(autoincrement())
  vk_id         Int?
  google_id     String?
  facebook_id   String?
  telegram_id   String?
  twitch_id     String?
  email         String?         @unique
  password      String?
  nickname      String?         @unique @default(dbgenerated("concat('Player', ' ', nextval('players_count'::regclass))"))
  balance       Int             @default(0)
  created_at    DateTime        @default(now())
  Notifications Notifications[]
  Messages      Messages[]

  @@index([id, email])
  @@map("users")
}

model Notifications {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [user_id], references: [id])
  user_id    Int
  text       String
  is_readed  Boolean  @default(false)
  created_at DateTime @default(now())

  @@index([id])
  @@map("notifications")
}

model Messages {
  id         Int      @id @default(autoincrement())
  text       String
  from       User     @relation(fields: [user_id], references: [id])
  user_id    Int
  created_at DateTime @default(now())

  @@index([id])
  @@map("messages")
}
